<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Worthington High Schools Alumni Club</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MvcWHSAlumni.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/W3.css">

</head>
<body>
    <header>
       
    </header>

  <div class="w3-sidebar w3-bar-block w3-card w3-animate-left" style="display:none" id="mySidebar">
  <button class="w3-bar-item w3-btn w3-blue w3-round-xxlarge w3-hover-red w3-medium" onclick="w3_close()">Close &times;</button><br />
  <a style="font-size: 12px;" class="w3-bar-item w3-btn w3-red w3-round-xxlarge w3-hover-blue" asp-area="" asp-controller="Home" asp-action="Index">Home</a><br />
  <a style="font-size: 12px;" class="w3-bar-item w3-btn w3-red w3-round-xxlarge w3-hover-blue" asp-area="" asp-controller="HelloWorld" asp-action="Index">Hello World</a><br />
  <a style="font-size: 12px;" class="w3-bar-item w3-btn w3-red w3-round-xxlarge w3-hover-blue" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a><br />
  <a style="font-size: 12px;" class="w3-bar-item w3-btn w3-red w3-round-xxlarge w3-hover-blue" asp-area="" asp-controller="PassedAlumni" asp-action="Index">Deceased</a>
</div>

<div id="main">

<div class="w3-blue">
  <button id="openNav" class="w3-button w3-red w3-medium" onclick="w3_open()">&#9776;</button>
  <div class="w3-container"><img src="~/Img/WHSLogo2.png" /><style="color:White">Worthington High Schools Alumni Club</style></div>
</div>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

</div>

<script>
function w3_open() {
  document.getElementById("main").style.marginLeft = "15%";
  document.getElementById("mySidebar").style.width = "15%";
  document.getElementById("mySidebar").style.display = "block";
  document.getElementById("openNav").style.display = 'none';
}
function w3_close() {
  document.getElementById("main").style.marginLeft = "0%";
  document.getElementById("mySidebar").style.display = "none";
  document.getElementById("openNav").style.display = "inline-block";
}
</script>


    <footer class="border-top footer text-muted">

 <script src="~/js/jquery.min.js"></script>
        <div class="container" style="font-size:10px; margin-left:100px">
            &copy; 2022 - Worthington High Schools Alumni Club - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> - Increase/decrease this page's font size:<input type="button" style="height:15px; width:40px; font-size:smaller" value="A▲" class="increaseFont"> <input type="button" style="height:15px; width:40px; font-size:smaller" value="A▼" class="decreaseFont">
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



