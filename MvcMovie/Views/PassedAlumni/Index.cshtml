@model MvcMovie.Models.AttendedClassResultsViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Report Passed Alumni</a>
</p>
<form asp-controller="PassedAlumni" asp-action="Index" method="get">
    <p>

        <select asp-for="AttendedClassResults" asp-items="Model.AttendedClass">
            <option value="">All</option>
        </select>

        FirstName: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PassedAlumni[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassedAlumni[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassedAlumni[0].PassingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassedAlumni[0].TheClassAttended)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassedAlumni[0].Price)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PassedAlumni)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PassingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TheClassAttended)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>